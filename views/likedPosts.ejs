<%- include("partials/header.ejs") %>
    <%- include("partials/postlogin.ejs") %>
        <h1>My liked Posts</h1>
        <div class="posts-container">
            <% if (posts.length> 0) { %>
                <% posts.forEach(function(posts, index) { %>
                    <% if(posts.isLiked) { %>
                        <div class="post">
                            <div class="titleImgBtn">
                                <h2>
                                    <%= posts.title %>
                                </h2>
                                <div>
                                    <form action="/postFeatures" method="POST">
                                        <input type="hidden" name="postIndex" value="<%= index %>">
                                        <button type="submit" class="imgBtn" name="action" value="unlike">
                                            <img src="/images/liked.png" alt="liked Button" class="btnImg">
                                        </button>
                                    </form>
                                </div>
                            </div>

                            <div class="blogContent">
                                <p>
                                    <%= posts.blog %>
                                </p>
                            </div>
                        </div>
                        <% } %>
                            <% }) %>
                                <% } else { %>
                                    <h2>No Liked posts yet</h2>
                                    <% } %>
                                        <%- include("partials/footer.ejs") %>